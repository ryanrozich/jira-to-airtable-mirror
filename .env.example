# Jira Configuration
JIRA_SERVER=https://your-domain.atlassian.net
JIRA_USERNAME=your_email@example.com
JIRA_API_TOKEN=your_jira_api_token

# Airtable Configuration
AIRTABLE_API_KEY=pat.your_personal_access_token
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
AIRTABLE_TABLE_NAME=Jira Issues

# Sync Configuration
JIRA_PROJECT_KEY=PROJ
JIRA_JQL_FILTER=project = PROJ AND status != Closed
SYNC_INTERVAL_MINUTES=60  # How often to run the sync job

# Field Mappings (JSON string)
JIRA_TO_AIRTABLE_FIELD_MAP={
    "key": "Jira Key", 
    "summary": "Summary", 
    "description": "Description", 
    "reporter": "Reporter", 
    "assignee": "Assignee",
    "issuetype": "Issue Type", 
    "status": "Status", 
    "parent": "Parent Issue Key",
    "created": "Date Created",
    "updated": "Last Updated",
    "resolutiondate": "Date Completed",
    "customfield_10020": "Story Points"
}
